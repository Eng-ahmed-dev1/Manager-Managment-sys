<Window x:Class="ManagerManagmentsys.Views.ManagerDashBoard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManagerManagmentsys.Views"
        mc:Ignorable="d"
        Title="ManagerDashBoard" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="txtblock" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"></Setter>
            <Setter Property="FontWeight" Value="ExtraBold"></Setter>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="BorderThickness" Value="3"></Setter>
            <Setter Property="BorderBrush" Value="Black"></Setter>
            <Setter Property="Height" Value="30"></Setter>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="Black"></Setter>
            <Setter Property="Background" Value="Transparent"></Setter>
            <Setter Property="BorderBrush" Value="Black"></Setter>
            <Setter Property="BorderThickness" Value="3"></Setter>
            <Setter Property="FontSize" Value="16"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>
        </Style>
    </Window.Resources>
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="50,0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Margin="30,0" Style="{StaticResource txtblock}"  Text="TaskID" Width="58" ></TextBlock>

            <TextBox  x:Name="txtTaskid"  Width="155"></TextBox>
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="1"  Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Width="341" >
            <TextBlock Margin="30,0" Style="{StaticResource txtblock}"  Text="EmployeeName" Width="124" ></TextBlock>
            <TextBox  x:Name="txtEmpName" Width="136"></TextBox>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="50,0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <TextBlock Margin="30,0" Style="{StaticResource txtblock}"  Text="Title" Width="58" ></TextBlock>
            <TextBox  x:Name="txtTitle" Width="155"></TextBox>
        </StackPanel>
        <StackPanel Grid.Column="0" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Width="342" >
            <TextBlock Margin="30,0" Style="{StaticResource txtblock}"  Text="Description" Width="97" ></TextBlock>
            <TextBox  x:Name="txtDesc" Width="150"></TextBox>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Width="342" >
            <TextBlock Margin="40,0" Style="{StaticResource txtblock}"  Text="EmpID" Width="97" ></TextBlock>
            <TextBox x:Name="txtEmpId"   Width="150"></TextBox>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"  Orientation="Horizontal" Grid.Row="0" Grid.Column="1">
            <TextBlock Style="{StaticResource txtblock }" Text="Status" Width="120" Height="22"></TextBlock>
            <ComboBox Name="combo" Width="120" Height="25" >
                <ComboBoxItem IsSelected="True">Pending</ComboBoxItem>
                <ComboBoxItem>In Progress</ComboBoxItem>
                <ComboBoxItem>Completed</ComboBoxItem>
            </ComboBox>
        </StackPanel>
        <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Click="Add"  Grid.Column="0" Width="200" Margin="10" Content="Add" HorizontalAlignment="Left" ></Button>
            <Button Click="Edit" Grid.Column="1" Width="200" Margin="10" Content="Edit" HorizontalAlignment="Center" />
            <Button Click="Delete" Grid.Column="2" Width="200" Margin="10" Content="Delete" HorizontalAlignment="Right" />
        </Grid>
        <DataGrid
            
          Grid.Row="4"
          Grid.ColumnSpan="2"
          Name="TasksGrid" 
          AutoGenerateColumns="False"
            
          HeadersVisibility="Column"
          AlternatingRowBackground="#6a6a6a"
          RowBackground="White"
          GridLinesVisibility="Vertical"
          BorderBrush="Black"
          BorderThickness="3"
          FontFamily="Segoe UI"
          FontSize="14"
          Margin="10,10,10,55"
          IsReadOnly="True"
          SelectionMode="Single" 
          SelectionChanged="TasksGrid_SelectionChanged" 
            >

            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="Gray"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="BorderBrush" Value="Gray"/>
                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn Header="EmpId" Binding="{Binding User.UserID}" Width="50"/>
                <DataGridTextColumn Header="EmployeeName" Binding="{Binding User.Name}" Width="*"/>
                <DataGridTextColumn Header="TaskId" Binding="{Binding TaskId}" Width="*"/>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="2*"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Click="Logout" Content="Log out" Background="red" Foreground="White" Width='120' Height="35" Grid.ColumnSpan="2" Margin="340,150,340,15" Grid.Row="4"></Button>
    </Grid>
</Window>
